<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/advanced_search_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFCF2"
    tools:context=".MainActivity"
    android:layout_gravity="bottom">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地區選擇"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp">
            <Button
                android:id="@+id/searchKey_all"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape_unselect"
                android:text="全台"
                android:textColor="#63521B"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="10dp"
                app:backgroundTint="@null"/>
            <Button
                android:id="@+id/searchKey_north"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape_unselect"
                android:text="北部"
                android:textColor="#63521B"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"
                app:backgroundTint="@null"/>
            <Button
                android:id="@+id/searchKey_middle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape_unselect"
                android:text="中部"
                android:textColor="#63521B"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"
                app:backgroundTint="@null"/>
            <Button
                android:id="@+id/searchKey_south"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape_unselect"
                android:text="南部"
                android:textColor="#63521B"
                android:textStyle="bold"
                android:layout_marginEnd="10dp"
                app:backgroundTint="@null"/>
            <Button
                android:id="@+id/searchKey_east"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape_unselect"
                android:text="東部"
                android:textColor="#63521B"
                android:textStyle="bold"
                android:layout_marginEnd="15dp"
                app:backgroundTint="@null"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="標籤篩選"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginLeft="10dp">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <Button
                    android:id="@+id/searchKey_advanced_1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape_unselect"
                    android:textColor="#63521B"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    app:backgroundTint="@null"/>
                <Button
                    android:id="@+id/searchKey_advanced_2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape_unselect"
                    android:textColor="#63521B"
                    android:textStyle="bold"
                    android:layout_marginEnd="10dp"
                    app:backgroundTint="@null"/>
                <Button
                    android:id="@+id/searchKey_advanced_3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape_unselect"
                    android:textColor="#63521B"
                    android:textStyle="bold"
                    android:layout_marginEnd="10dp"
                    app:backgroundTint="@null"/>
                <Button
                    android:id="@+id/searchKey_advanced_4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape_unselect"
                    android:textColor="#63521B"
                    android:textStyle="bold"
                    android:layout_marginEnd="15dp"
                    app:backgroundTint="@null"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <Button
                    android:id="@+id/searchKey_advanced_5"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape_unselect"
                    android:textColor="#63521B"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    app:backgroundTint="@null"/>
                <Button
                    android:id="@+id/searchKey_advanced_6"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape_unselect"
                    android:textColor="#63521B"
                    android:textStyle="bold"
                    android:layout_marginEnd="10dp"
                    app:backgroundTint="@null"/>
                <Button
                    android:id="@+id/searchKey_advanced_7"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape_unselect"
                    android:textColor="#63521B"
                    android:textStyle="bold"
                    android:layout_marginEnd="10dp"
                    app:backgroundTint="@null"/>
                <Button
                    android:id="@+id/searchKey_advanced_8"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape_unselect"
                    android:textColor="#63521B"
                    android:textStyle="bold"
                    android:layout_marginEnd="15dp"
                    app:backgroundTint="@null"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <Button
                    android:id="@+id/searchKey_advanced_9"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape_unselect"
                    android:textColor="#63521B"
                    android:textStyle="bold"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    app:backgroundTint="@null"/>
                <Button
                    android:id="@+id/searchKey_advanced_10"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape_unselect"
                    android:textColor="#63521B"
                    android:textStyle="bold"
                    android:layout_marginEnd="10dp"
                    app:backgroundTint="@null"/>
                <Button
                    android:id="@+id/searchKey_advanced_11"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape_unselect"
                    android:textColor="#63521B"
                    android:textStyle="bold"
                    android:layout_marginEnd="10dp"
                    app:backgroundTint="@null"/>
                <Button
                    android:id="@+id/searchKey_advanced_12"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_shape_unselect"
                    android:textColor="#63521B"
                    android:textStyle="bold"
                    android:layout_marginEnd="15dp"
                    app:backgroundTint="@null"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>